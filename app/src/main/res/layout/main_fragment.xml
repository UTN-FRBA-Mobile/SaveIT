<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blueBackground"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\

        <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:clickable="false"
            android:focusable="false"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="28dp"
            app:contentPadding="20dp"
            app:strokeColor="@color/blueBackground"
            android:layout_marginBottom="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewTituloBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="Balance Abril 2021"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:gravity="right"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="Ingresos = "
                        android:textAlignment="gravity"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoIngresos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="$300000"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:gravity="right"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="Gastos = "
                        android:textAlignment="gravity"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoGastos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="$100000"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />
                </LinearLayout>

                <View
                    android:layout_width="260dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"

                    android:layout_marginRight="50dp"
                    android:background="#575454"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:gravity="right"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="Total = "
                        android:textAlignment="gravity"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="50"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="$200000"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="10dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="28dp"
            app:contentPadding="20dp"
            app:strokeColor="@color/blueBackground"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#E3F2FD"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/ahorroButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:scaleType="centerInside"
                    android:src="@drawable/ahorro_icon_chico" />

                <ImageButton
                    android:id="@+id/agregarMovimientosButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_toRightOf="@+id/ahorroButton"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:scaleType="centerInside"

                    android:src="@drawable/agregar_movimiento_icon_chico" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/reportesButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:scaleType="centerInside"
                    android:src="@drawable/reportes_icon_chico" />

                <ImageButton
                    android:id="@+id/listaMovimientosButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/agregarMovimientosButton"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp"
                    android:layout_toRightOf="@+id/reportesButton"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundcorner"
                    android:scaleType="centerInside"
                    android:src="@drawable/lista_movimientos_icon_chico" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>