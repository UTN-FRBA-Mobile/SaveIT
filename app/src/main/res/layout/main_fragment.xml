<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blueBackground"
    tools:context=".MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\
        <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E3F2FD"
            app:cardElevation="2dp"
            android:clickable="false"
            android:focusable="false"
            android:checkable="false"
            android:paddingHorizontal="10dp"
            app:cardCornerRadius="28dp"
            app:contentPadding="20dp"
            app:strokeWidth="10dp"
            app:strokeColor="@color/blueBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewTituloBalance"
                        android:text="Balance Abril 2021"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="25dp"
                        app:counterEnabled="true"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        app:counterMaxLength="50"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:text="Ingresos = "
                        android:layout_centerHorizontal="true"
                        android:gravity="right"
                        android:textAlignment="gravity"                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoIngresos"
                        android:text="$300000"
                        android:layout_centerHorizontal="true"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:text="Gastos = "
                        android:layout_centerHorizontal="true"
                        android:gravity="right"
                        android:textAlignment="gravity"                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoGastos"
                        android:text="$100000"
                        android:layout_centerHorizontal="true"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>
                </LinearLayout>

                <View
                    android:layout_width="260dp"
                    android:layout_height="1dp"
                    android:background="#575454"

                    android:gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:text="Total = "
                        android:layout_centerHorizontal="true"
                        android:gravity="right"
                        android:textAlignment="gravity"                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewMontoTotal"
                        android:text="$200000"
                        android:layout_centerHorizontal="true"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="70dp"
            android:background="@color/lightBlue">


            <ImageButton
                android:id="@+id/ahorroButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ahorro_icon_chico" />

            <ImageButton
                android:id="@+id/agregarMovimientosButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/ahorroButton"
                android:layout_weight="1"
                android:background="@drawable/agregar_movimiento_icon_chico" />

            <ImageButton
                android:id="@+id/reportesButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ahorroButton"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:background="@drawable/reportes_icon_chico" />

            <ImageButton
                android:id="@+id/listaMovimientosButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agregarMovimientosButton"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@+id/reportesButton"
                android:layout_weight="1"
                android:background="@drawable/lista_movimientos_icon_chico" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>