<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightBlue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:id="@+id/balanceMesTextView"
                    android:text="Balance Abril 2021"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:id="@+id/ingresosTextView"
                    android:text="Ingresos: + $100.000"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:id="@+id/gastosTextView"
                    android:text="Gastos:   -    $60.000"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:text="------------------------------------"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:id="@+id/saldoTextView"
                    android:text="Saldo:        + $40.000"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="70dp"
            android:background="@color/lightBlue">

            <ImageButton
                android:id="@+id/ahorroButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ahorro_icon_chico" />

            <ImageButton
                android:id="@+id/agregarMovimientosButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/ahorroButton"
                android:layout_weight="1"
                android:background="@drawable/agregar_movimiento_icon_chico" />

            <ImageButton
                android:id="@+id/reportesButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ahorroButton"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:background="@drawable/reportes_icon_chico" />

            <ImageButton
                android:id="@+id/listaMovimientosButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agregarMovimientosButton"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@+id/reportesButton"
                android:layout_weight="1"
                android:background="@drawable/lista_movimientos_icon_chico" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>