<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="500dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="75dp"
            android:background="@color/lightBlue">

            <ImageButton
                android:id="@+id/byLocationButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:background="@drawable/bylocation_icon_chico" />

            <ImageButton
                android:id="@+id/byCategoryButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/byLocationButton"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="@drawable/bycategory_icon_chico" />

            <ImageButton
                android:id="@+id/byDateButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/byCategoryButton"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:background="@drawable/bydate_icon_chico" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>