<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    app:strokeColor="@color/blueBackground"

    >
    <com.google.android.material.card.MaterialCardView
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/blueBackground"
        app:contentPadding="20dp"
        app:strokeColor="@color/blueBackground"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="30dp"
        >
    <com.google.android.material.card.MaterialCardView
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E3F2FD"
        app:cardCornerRadius="28dp"
        app:contentPadding="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="30dp"
        >


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/pieChartButton"
                    android:layout_centerHorizontal="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundcorner"
                    android:scaleType="fitCenter"
                    android:padding="10dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pie_chart"
                 />


            <ImageButton
                android:id="@+id/barChartButton"
                android:layout_centerHorizontal="true"

                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitCenter"
                android:padding="20dip"
                android:adjustViewBounds="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/pieChartButton"
                android:src="@drawable/column_chart" />

            <ImageButton
                android:id="@+id/dateChartButton"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_below="@+id/barChartButton"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitCenter"
                android:padding="20dip"
                android:adjustViewBounds="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/calendar_img" />

            <ImageButton
                android:id="@+id/mapChartButton"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:scaleType="fitCenter"
                android:padding="20dip"
                android:adjustViewBounds="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/dateChartButton"
                android:layout_marginTop="20dp"
                android:src="@drawable/globe_img" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>